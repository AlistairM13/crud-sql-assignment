generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  ID                  Int       @id @default(autoincrement())
  name                String
  mobile_no           String
  email_id            String
  password            String    @default("123")
  address             String
  pan_no              String
  aadhar_no           String
  photo_path          String
  certificate_path    String
  status	            Status    @default(INACTIVE)
  uploaded_datetime   DateTime  @default(now())
}

enum Status {
  ACTIVE
  INACTIVE
}